<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="org.carworkshop">

        <class>org.carworkshop.entities.CabeceraDiagnostico</class>
        <class>org.carworkshop.entities.Cita</class>
        <class>org.carworkshop.entities.Cliente</class>
        <class>org.carworkshop.entities.LineaDiagnosticoId</class>
        <class>org.carworkshop.entities.Login</class>
        <class>org.carworkshop.entities.PrefCliente</class>
        <class>org.carworkshop.entities.PrefClienteId</class>
        <class>org.carworkshop.entities.Sesion</class>
        <class>org.carworkshop.entities.TipoVehiculo</class>
        <class>org.carworkshop.entities.Vehiculo</class>
        <class>org.carworkshop.entities.Sesion</class>


        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <!-- <property name="hibernate.hbm2ddl.auto" value="create"/> -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost/carworkshop"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.formate_sql" value="false"/>
        </properties>
    </persistence-unit>

</persistence>
